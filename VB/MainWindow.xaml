<Window 
    x:Class="DXEditorsSample.MainWindow" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
	xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
	xmlns:local="clr-namespace:DXEditorsSample"
    Title="MainWindow" 
    Height="350" 
    Width="525">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<dxe:ListBoxEdit x:Name="editor1" DisplayMember="Name">
			<i:Interaction.Behaviors>
				<local:MyListBoxDragDropManager x:Name="manager1"/>
			</i:Interaction.Behaviors>
		</dxe:ListBoxEdit>
		<dxe:ListBoxEdit x:Name="editor2" Grid.Column="1" DisplayMember="Name">
			<i:Interaction.Behaviors>
				<local:MyListBoxDragDropManager x:Name="manager2"/>
			</i:Interaction.Behaviors>
		</dxe:ListBoxEdit>
	</Grid>
</Window>